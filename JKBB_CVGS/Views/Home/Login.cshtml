@model JKBB_CVGS.Models.ViewModels.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<p></p>

<div class="row">
    
    <div class="col-md-5">

        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { }))
        {
            <div class="form-horizontal">
                <h4>Sign in</h4>
                <hr />
                @if (Request.Form.AllKeys.Contains("loginForm"))
                {
                    @Html.ValidationSummary(true, "Login failed. Check your login details.", new { @class = "text-danger" })
                }
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(u => u.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(p => p.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input name="loginForm" type="submit" value="Sign in" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>
